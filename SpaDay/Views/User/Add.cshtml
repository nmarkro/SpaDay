@{
}

    <form method='post' action="/user">
        <table>
            <tr>
                <td><label for="username">Username</label></td>
                <td><input type="text" name="username" value="@ViewBag.username" /></td>
            </tr>

            <tr>
                <td><label for="password">Password</label></td>
                <td><input type="password" name="password" /></td>
            </tr>

            <tr>
                <td><label for="verify">Confirm Password</label></td>
                <td><input type="password" name="verify" /></td>
            </tr>

            <tr>
                <td><label for="email">Email Address</label></td>
                <td><input type="email" name="email" value="@ViewBag.email" /></td>
            </tr>
        </table>
        <input type='submit' value='Submit'>
        @if (ViewBag.error)
        {
            <p>Error: Passwords do not match.</p>
        }
    </form>